<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/indigo_100"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="@dimen/all_hearts_width"
    android:layout_height="@dimen/all_hearts_height"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="@dimen/default_margin"
    android:layout_marginEnd="@dimen/default_margin">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/main_IMG_heart1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/heart"
         />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/main_IMG_heart2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/heart_margin"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/heart"
      />

    <com.google.android.material.imageview.ShapeableImageView

        android:id="@+id/main_IMG_heart3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/heart" />

</androidx.appcompat.widget.LinearLayoutCompat>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/main_BTN_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="19dp"
        app:icon="@drawable/arrow_left_white_24"
        android:backgroundTint="@color/indigo_300"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_BTN_start"
        android:layout_width="@dimen/start_BTN_width"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:textStyle="bold"
        android:textSize="@dimen/start_BTN_text_size"
        android:backgroundTint="@color/indigo_500"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/buttons_margin"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/main_BTN_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="@dimen/buttons_margin"
        app:icon="@drawable/arrow_right_white_24"
        android:backgroundTint="@color/indigo_300"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>




</RelativeLayout>