<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HighScoreFragment"
    android:background="@color/indigo_300">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/highScores_ET_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:hint="@string/list_hint"
        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/highScores_BTN_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/highScores_ET_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_margin_high_score"
        android:text="@string/send" />

</RelativeLayout>